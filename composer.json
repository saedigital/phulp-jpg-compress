{
    "name": "saedigital/phulp-jpg-compress",
    "description": "Compress your jpg image files",
    "keywords": ["phulpplugin", "phulp", "php", "jpg-compress", "compress", "image", "jpg"],
    "type": "library",
    "require": {
        "php": ">=5.6",
        "reisraff/phulp": "^1.9",
        "intervention/image": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload" : {
        "psr-4" : {
            "SaeDigital\\JpgCompress\\" : "src"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "SaeDigital\\JpgCompress\\" : "tests"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ronaldo Matos Rodrigues",
            "email": "ronaldo.rodrigues@saedigital.com.br"
        },
        {
            "name": "Ronaldo Matos Rodrigues",
            "email": "ronaldo@whera.com.br"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "test": "vendor/bin/phpunit",
        "check-style": "vendor/bin/phpcs  -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src/ tests/",
        "fix-style":   "vendor/bin/phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src/ tests/"
    }
}
